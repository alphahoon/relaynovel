extends layout
  
block inlayout
  .row(style="margin-top:1em;")
      .col.s0.m2.l4
        .row
        if message
          .toast.rounded.strong #{message}             
      .col.s12.m8.l4.grey.lighten-5(style="border:0.2em grey solid; border-radius:1em; padding: 2em;")
        .row
          h4.teal-text.text-darken-1(style="text-align:center; font-weight:bold;") 프로필 변경
        form(action='/myprofile', method='post', enctype='multipart/form-data', style='text-align:center;')
          .row
            .input-field
              input#user_name.validate(name='name', type='text', length='20', value=userdata.Nickname)
              label(for='user_name') 닉네임
          .row
            .input-field
              input#user_pw1.validate(name='pswd1', type='password', length='30')
              label(for='user_pw1') 패스워드 변경
          .row
            .input-field
              input#user_pw2.validate(name='pswd2', type='password', length='30')
              label(for='user_pw2') 패스워드 변경 확인
          .row
            img.circle.profile#img_profile(src=userdata.Profilepic style="width:250px; height:250px;")
          .row
            .col.s6
              .file-field.input-field.btn.green(style="width:100%") 사진 업로드
                input#upload_profile(name='profile', type='file', multiple='')
            .col.s6
              .file-field.input-field.btn.red#delete_file(style="width:100%") 사진 삭제
          .row
            button.btn-large.waves-effect.waves-light.teal(type='submit', name='register', style="width:100%;") 변경하기
      .col.s0.m2.l4
        .row
      script(type="text/javascript", src = 'viewjs/imageloader.js')