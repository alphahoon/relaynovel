extends layout
  
block inlayout
  .row(style="margin:2em;")
      .col.s0.m2.l4
        .row
      .col.s12.m8.l4.grey.lighten-5(style="border:0.2em grey solid; border-radius:1em; padding: 2em;")
        .row
          h4.teal-text.text-darken-1(style="text-align:center; font-weight:bold;") 환영합니다!
        form(action='/register', method='post' style='text-align:center;')
          .row
            .input-field
              input#user_id.validate(name='id', type='text', length='20')
              label(for='user_id') 아이디
          .row
            .input-field
              input#user_name.validate(name='name', type='text', length='20')
              label(for='user_name') 닉네임
          .row
            .input-field
              input#user_pw1.validate(name='pswd1', type='password', length='30')
              label(for='user_pw1') 패스워드
          .row
            .input-field
              input#user_pw2.validate(name='pswd2', type='password', length='30')
              label(for='user_pw2') 패스워드 확인
          .row
            img.circle.profile#img_profile(src='/empty_user.jpg' style="width:250px; height:250px;")
          .row
            .col.s6
              .file-field.input-field.btn.green(style="width:100%") 사진 업로드
                input#upload_profile(type='file', multiple='')
            .col.s6
              .file-field.input-field.btn.red#delete_file(style="width:100%") 사진 삭제
          .row
            button.btn-large.waves-effect.waves-light.teal(type='submit', name='register', style="width:100%;") 가입하기
      .col.s0.m2.l4
        .row
      script(type="text/javascript").
        function readURL(input) {
          if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
              $('#img_profile').attr('src', e.target.result);
            }
            reader.readAsDataURL(input.files[0]);
          }
        }
        
        $("#upload_profile").change(function(){
          readURL(this);
        });
        
        var control = $("#upload_profile");
        $("#delete_file").on("click", function () {
            control.replaceWith( control = control.clone( true ) );
            $('#img_profile').attr('src', 'http://naturalpod.com/wp-content/uploads/2012/07/Natural-Pod-Blank-Photo-Person.jpg');
        });