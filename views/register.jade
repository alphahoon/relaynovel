extends contents-layout
block title
  title 가입하기
block preload-script
block contents-header
  if message
    .toast.rounded.strong #{message}
block contents
  .container.box-sm(style='text-align:center;')
    h4.teal-text.text-darken-1(style="text-align:center; font-weight:bold;") 환영합니다!
    form(action='/register', method='post', enctype='multipart/form-data', style='text-align:center;')
      .row
        input#user_id.validate(name='id', type='text', length='20', placeholder='아이디', style='text-align:center;')
        input#user_name.validate(name='name', type='text', length='20', placeholder='닉네임', style='text-align:center;')
        input#user_pw1.validate(name='pswd1', type='password', length='30', placeholder='패스워드', style='text-align:center;')
        input#user_pw2.validate(name='pswd2', type='password', length='30', placeholder='패스워드 확인', style='text-align:center;')
      .row
        img.circle.profile#img_profile(src='/userimages/empty_user.jpg')
      .row
        .col.s6
          .file-field.input-field.btn.green(style="width:100%") 사진 업로드
            input#upload_profile(name = 'profile', type='file', multiple='')
        .col.s6
          .file-field.input-field.btn.red#delete_file(style="width:100%") 사진 삭제
      .row
        button.btn-large.waves-effect.waves-light.teal(type='submit', name='register', style="width:100%;") 가입하기
block contents-footer
block afterload-script
  script(type="text/javascript", src = 'viewjs/imageloader.js')